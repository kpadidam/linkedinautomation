# ==============================================
# LinkedIn Job Automation - Environment Configuration
# ==============================================
# Copy this file to .env and fill in your values

# ------ REQUIRED CONFIGURATIONS ------

# OpenAI Configuration (REQUIRED)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Google Sheets Configuration (REQUIRED)
# 1. Create credentials at: https://console.cloud.google.com/apis/credentials
# 2. Update the config/credentials.json file with your service account details
# 3. Create a new Google Sheet and copy its ID from the URL
GOOGLE_SHEETS_CREDENTIALS_PATH=config/credentials.json
GOOGLE_SHEETS_ID=your_google_sheet_id_here

# Resume Configuration (REQUIRED)
# Place your resume in the 'resumes' folder with the name 'resume.pdf'
RESUME_FILE_PATH=./resumes/resume.pdf

# ------ OPTIONAL CONFIGURATIONS ------

# LinkedIn Configuration (Optional - for authenticated searches)
# Only needed if you want to search with authentication
LINKEDIN_EMAIL=your_email@example.com
LINKEDIN_PASSWORD=your_password
LINKEDIN_URL=https://www.linkedin.com/login

# Groq API (Optional - for faster LLM inference)
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# ------ APPLICATION SETTINGS ------

# Database Configuration
DATABASE_URL=sqlite:///./linkedin_jobs.db

# Application Configuration
APP_NAME=LinkedIn Job Automation
APP_VERSION=1.0.0
DEBUG=False
LOG_LEVEL=INFO

# Browser Configuration
BROWSER_HEADLESS=False
BROWSER_TIMEOUT=30000

# ------ SEARCH DEFAULTS ------
# These will be used as defaults but can be overridden in config files

# Search Configuration
DEFAULT_LOCATION=United States
DEFAULT_JOB_TYPE=full-time
MAX_RESULTS_PER_SEARCH=50
SEARCH_DELAY_SECONDS=5

# User Skills (comma-separated list)
# These will be matched against job descriptions
USER_SKILLS=python,javascript,react,nodejs,sql